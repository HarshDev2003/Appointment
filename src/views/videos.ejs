<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uploaded Videos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            text-align: center;
        }
        .video-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        .video-box {
            width: 300px;
        }
        video {
            width: 100%;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <h2>Uploaded Videos</h2>
    <div class="video-container">
        <% videos.forEach(video => { %>
            <div class="video-box">
                <h4><%= video.user %></h4>
                <video controls>
                    <source src="<%= video.file_path %>" type="video/webm">
                    Your browser does not support the video tag.
                </video>
            </div>
        <% }); %>
    </div>
</body>
</html>
