<style>
  /* How It Works Section */
.how-it-works {
  background-color: #f9f9f9;
}

.step {
  background: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease-in-out;
}

.step:hover {
  transform: translateY(-5px);
}

.step-icon {
  width: 50px;
  height: 50px;
  background: #28a745;
  color: #fff;
  font-size: 20px;
  font-weight: bold;
  line-height: 50px;
  text-align: center;
  border-radius: 50%;
  margin: 0 auto;
}

.step h5 {
  color: #333;
}

.step p {
  font-size: 14px;
  color: #666;
}


/* Consultation Fees Section */
.consultation-fees {
  background: #f8f9fa;
}

.fee-card {
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: transform 0.3s ease-in-out;
}

.fee-card:hover {
  transform: translateY(-5px);
}

.fee-icon {
  font-size: 40px;
  margin-bottom: 10px;
}

.fee-card h5 {
  color: #28a745;
}

.fee-card p {
  color: #666;
  font-size: 14px;
}

/* Latest Insights Section */
.latest-insights {
  background: #f8f9fa;
}

.insight-card {
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
  position: relative;
  overflow: hidden;
}

.insight-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
}

.insight-card h4 {
  font-size: 20px;
  color: #28a745;
  margin-bottom: 10px;
}

.insight-card p {
  font-size: 14px;
  color: #666;
}

.read-more {
  display: inline-block;
  margin-top: 10px;
  font-weight: bold;
  color: #007bff;
  text-decoration: none;
  position: relative;
}

.read-more::after {
  content: "";
  display: block;
  width: 0%;
  height: 2px;
  background: #007bff;
  transition: width 0.3s ease-in-out;
}

.read-more:hover::after {
  width: 100%;
}

/* Ready to Start Section */
.ready-to-start {
  background: linear-gradient(to right, #28a745, #20c997);
  color: #fff;
  padding: 60px 20px;
  text-align: center;
  border-radius: 12px;
  margin: 40px auto;
  max-width: 800px;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease-in-out;
}

.ready-to-start:hover {
  transform: scale(1.02);
}

.ready-to-start h2 {
  font-size: 32px;
  margin-bottom: 10px;
}

.ready-to-start p {
  font-size: 18px;
  margin-bottom: 20px;
}

.btn-container {
  display: flex;
  justify-content: center;
  gap: 15px;
}

.btn-primary,
.btn-secondary {
  display: inline-block;
  padding: 12px 25px;
  border-radius: 30px;
  text-decoration: none;
  font-weight: bold;
  transition: 0.3s ease-in-out;
  font-size: 16px;
}

.btn-primary {
  background: #fff;
  color: #28a745;
}

.btn-primary:hover {
  background: #f8f9fa;
  box-shadow: 0 5px 10px rgba(255, 255, 255, 0.3);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 2px solid white;
}

.btn-secondary:hover {
  background: #fff;
  color: #28a745;
}

/* Why Choose HealthyMind Section */
.why-choose {
  background: #f8f9fa;
  padding: 60px 20px;
}

.why-choose h2 {
  font-size: 32px;
  color: #28a745;
}

.why-choose .highlight {
  color: #20c997;
}

.choose-card {
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
  animation: fadeInUp 0.8s ease-in-out;
}

.choose-card img {
    width: 150px;  /* Adjust size as needed */
    height: 150px; /* Ensure uniform height */
    border-radius: 50%; /* Makes the image circular */
    object-fit: cover; /* Ensures the image fills the circle */
    border: 4px solid #fff; /* Optional: Adds a white border */
    display: block;
    margin: 0 auto 15px; /* Centers image */
}


.choose-card h4 {
  font-size: 20px;
  color: #28a745;
  margin-bottom: 10px;
}

.choose-card p {
  font-size: 14px;
  color: #666;
}

.choose-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
}

/* Animation */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>
